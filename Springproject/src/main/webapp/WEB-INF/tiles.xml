<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE tiles-definitions PUBLIC "-//Apache Software Foundation//DTD Tiles Configuration 2.1//EN" "http://tiles.apache.org/dtds/tiles-config_2_1.dtd">

<tiles-definitions>

	<definition name="board.*" template="/WEB-INF/views/layout/board.jsp">
		
		<!-- asset -->
		<put-attribute name="asset" value="/WEB-INF/views/inc/asset.jsp"></put-attribute>
		
		<!-- header -->
		<put-attribute name="header" value="/WEB-INF/views/inc/header.jsp"></put-attribute>
		<put-attribute name="main" value="/WEB-INF/views/inc/main.jsp"></put-attribute>
		<put-attribute name="sidebar" value="/WEB-INF/views/inc/sidebar.jsp"></put-attribute>
		<put-attribute name="upbar" value="/WEB-INF/views/inc/upbar.jsp"></put-attribute>
		<put-attribute name="footer" value="/WEB-INF/views/inc/footer.jsp"></put-attribute>
		
		<!-- content -->
		<put-attribute name="content" value="/WEB-INF/views/board/{1}.jsp"></put-attribute>
		
	</definition>

</tiles-definitions>























